{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<header class="main-header post-head {{#unless @site.cover_image}}no-cover{{/unless}}">
    <div class="top-bar">
        <div class="top-bar-content">
            <h1 class="page-title">
              <a href="/">
                {{@site.title}}
              </a>
            </h1>
        </div>
        <nav class="main-nav nav-right">
            <!-- {{#if @site.logo}}<a class="blog-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>{{/if}} -->
            {{#if @site.navigation}}
                <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
            {{/if}}
        </nav>
    </div>

    {{#if @site.cover_image}}
    <div class="header-cover" style="background-image: url({{@site.cover_image}})">
      &nbsp;
    </div>
    {{/if}}
</header>

{{!-- The main content area on the homepage --}}
<main class="content" role="main">
    
    {{#tag}}
        <article class="post">
            <h2>{{name}}</h2>
            <h4>
                {{#if description}}
                    {{description}}
                {{else}}
                    A {{../pagination.total}}-post collection
                {{/if}}
            </h4>
        </article>
        {{/tag}}


    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>
